<%= form_for @user do |f| %>
  <p>
    <%= f.label :name,'用户名' %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email,'邮箱' %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password,'密码' %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation,'请再输入一次密码' %>
    <%= f.password_field :password_confirmation %>
  </p>

  <p><%= f.submit '注册' %></p>
<% end %>
